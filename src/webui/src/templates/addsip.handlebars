<div class="row"> 
	<div class="col-sm-12"> 
		<form id="formaddsip" class="form-horizontal" role="form"> 
			<input name="command" type="hidden" value="addsip" />
			<div class="form-group"> 
				<label class="col-sm-4 control-label" for="user">Username</label> 
				<div class="col-sm-4"> 
					<input id="user" name="user" type="text" placeholder="eg. 631" class="form-control input-md" required autofocus>
				</div> 
				<div class="help-block with-errors"></div>
			</div>
			<div class="form-group"> 
				<label class="col-sm-4 control-label" for="domain">Domain</label> 
				<div class="col-sm-4"> 
					<input id="domain" name="domain" type="text" placeholder="eg. example.net" class="form-control input-md" required>
				</div> 
				<div class="help-block with-errors"></div>
			</div>
			<div class="form-group"> 
				<label class="col-sm-4 control-label" for="password">Password</label> 
				<div class="col-sm-4"> 
					<input id="password" name="password" type="password" class="form-control input-md" required>
				</div> 
				<div class="help-block with-errors"></div>
			</div>
		</form> 
	</div>  
</div>
