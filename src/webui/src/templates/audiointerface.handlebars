<div class="row"> 
	<div class="col-sm-12"> 
		<form id="forminterface" class="form-horizontal" role="form"> 
			<input name="command" type="hidden" value="interface" />

			<div class="form-group"> 
				<label class="col-sm-4 control-label" for="input">Driver</label> 
				<div class="col-sm-6"> 
					<select id="interface_driver" class="form-control">
{{#each this.drivers}}
						<option{{#if selected}} selected{{/if}} value="{{id}}">{{display}}</option>
{{/each}}
					</select>
				</div> 
				<div class="help-block with-errors"></div>
			</div>
			<div class="form-group"> 
				<label class="col-sm-4 control-label" for="input">Input</label> 
				<div class="col-sm-6"> 
					<select id="interface_input" class="form-control">
{{#each this.input}}
						<option{{#if selected}} selected{{/if}} value="{{id}}">{{display}}</option>
{{/each}}
					</select>
				</div> 
				<div class="help-block with-errors"></div>
			</div>
			<div class="form-group"> 
				<label class="col-sm-4 control-label" for="input">Output</label> 
				<div class="col-sm-6"> 
					<select id="interface_output" class="form-control">
{{#each this.output}}
						<option{{#if selected}} selected{{/if}} value="{{id}}">{{display}}</option>
{{/each}}
					</select>
				</div> 
				<div class="help-block with-errors"></div>
			</div>
