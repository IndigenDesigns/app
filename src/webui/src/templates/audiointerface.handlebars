{{#each this.monitor}}
						<option{{#if selected}} selected{{/if}} value="{{id}}">{{display}}</option>
{{/each}}
					</select>
				</div> 
				<div class="help-block with-errors"></div>
			</div>
-->

		</form> 
			<div class="pull-right"> 
			</div>
			<div class="form-group"> 
				<label class="col-sm-4 control-label" for="input"></label> 
				<div class="col-sm-6"> 
					<button class="btn btn-default" id="btn-audio-loop" style="margin-left: -5px;"><span class="glyphicon glyphicon-play"></span> Start Audio Test Loop</button>
				</div> 
				<div class="help-block with-errors"></div>
			</div>
	</div>  
</div>
